<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SummaryPage">



    <ImageView
        android:id="@+id/sumBackBtn"
        android:layout_width="30dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/backarrow"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imageView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="260dp"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:paddingTop="20dp"
        android:paddingLeft="2dp"
        android:hint="Write about yourself..."
        android:fontFamily="@font/dm_sans_medium"
        android:textColorHint="#A2BEF4"
        android:textSize="16sp"
        android:background="@null"
        android:gravity="top" />


    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Summary"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:backgroundTint="#246BFD"
        android:shadowColor="#41000000"
        android:text="Save"
        android:textSize="20sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/cool"
        app:menu="@menu/bottom_nav_menu"
        style="@style/BottomNavigationStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:itemBackground="@drawable/bottom_nav_item_background" />


</RelativeLayout>
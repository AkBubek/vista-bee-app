<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CADCFF">


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/burg" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/remove"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pt_sans_bold"
        android:text="Add a job"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="POST"
        android:textColor="#150B3D"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:backgroundTint="#0C2778" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/home"
        android:layout_marginTop="646dp"
        android:layout_marginLeft="116dp"/>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/plus"
        android:layout_marginTop="646dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/user"
        android:layout_marginTop="646dp"
        android:layout_marginLeft="255dp"/>
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/box"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:hint="Job position*"
        android:fontFamily="@font/dm_sans_bold"
        android:backgroundTint="#150B3D"
        android:textSize="18sp"
        android:textColorHint="#ffffff"/>
    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:hint="Type of workplace"
        android:layout_below="@id/editTextText"
        android:fontFamily="@font/dm_sans_bold"
        android:backgroundTint="#150B3D"
        android:textSize="18sp"
        android:textColorHint="#ffffff"/>

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:hint="Job location"
        android:layout_below="@id/editTextText1"
        android:fontFamily="@font/dm_sans_bold"
        android:backgroundTint="#150B3D"
        android:textSize="18sp"
        android:textColorHint="#ffffff"/>
    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:hint="Company"
        android:layout_below="@id/editTextText2"
        android:fontFamily="@font/dm_sans_bold"
        android:backgroundTint="#150B3D"
        android:textSize="18sp"
        android:textColorHint="#ffffff"/>
    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:hint="Employment type"
        android:layout_below="@id/editTextText3"
        android:fontFamily="@font/dm_sans_bold"
        android:backgroundTint="#150B3D"
        android:textSize="18sp"
        android:textColorHint="#ffffff"/>
    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/box"
        android:ems="10"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:hint="Description"
        android:layout_below="@id/editTextText4"
        android:fontFamily="@font/dm_sans_bold"
        android:backgroundTint="#150B3D"
        android:textSize="18sp"
        android:textColorHint="#ffffff"/>

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/add"
        android:layout_marginTop="116dp"
        android:layout_marginLeft="310dp"/>

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/add"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="310dp"/>






</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".HomePage"
    android:layout_height="wrap_content"
    android:background="#Ffffff"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="104dp"
            android:layout_height="108dp"
            android:background="@drawable/circle2" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/profile_picture"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Name"
            android:textColor="#8A8A8A"
            android:textSize="32sp" />
        <EditText
            android:id="@+id/editTextText"
            android:layout_width="340dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@drawable/box"
            android:ems="10"
            android:paddingLeft="50dp"
            android:inputType="text"
            android:hint="Search for a job or company"
            android:fontFamily="@font/dm_sans_bold"
            android:backgroundTint="#4A9C94"
            android:textSize="18sp"
            android:textColorHint="#ffffff"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="135dp"
            app:srcCompat="@drawable/poisk" />

        <ImageView
            android:id="@+id/imageButton3"
            android:layout_width="273dp"
            android:layout_height="148dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="126dp"
            android:layout_marginTop="246dp"
            app:srcCompat="@drawable/poiiisk" />

        <ImageView
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/state" />

        <Button
            android:id="@+id/readmorebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="320dp"
            android:backgroundTint="#3A7BFE"
            android:text="Read more" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="265dp"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Job at 1,2 and 3"
            android:textColor="#3A7BFE"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="36dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Recommendation"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="440dp"
            android:layout_toRightOf="@id/textView14"
            android:fontFamily="@font/dm_sans_bold"
            android:text="See all"
            android:textColor="#3A7BFD"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="490dp"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:src="@drawable/clickable" />

                <ImageView
                    android:id="@+id/imageViewClick1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="36dp"
                    android:src="@drawable/clickable" />
            </LinearLayout>


        </HorizontalScrollView>
        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="36dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Recent jobs"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="270dp"
            android:layout_below="@id/textView15"
            android:layout_toRightOf="@id/textView16"
            android:fontFamily="@font/dm_sans_bold"
            android:text="See all"
            android:textColor="#3A7BFD"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView16"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/spotify" />
        <ImageView
            android:id="@+id/appl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spot"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/apple" />
        <ImageView
            android:id="@+id/pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appl"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/paypal" />
        <ImageView
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pp"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/pintrest"
            android:layout_marginBottom="40dp"/>

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="51dp"
            android:layout_height="52dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="345dp"
            app:srcCompat="@drawable/google" />


        <!--        <EditText-->
<!--            android:id="@+id/editTextText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/experience"-->
<!--            android:ems="10"-->
<!--            android:hint="University"-->
<!--            android:inputType="text" />-->


    </RelativeLayout>
</ScrollView>
